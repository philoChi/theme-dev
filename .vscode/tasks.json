{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Sync Files",
            "type": "shell",
            "command": "python",
            "args": [
                "${config:syncConfig.scriptDirectory}/sync_files.py",
                "--input",
                "${config:syncConfig.inputPath}",
                "--output",
                "${config:syncConfig.outputPath}",
                "--config",
                "${config:syncConfig.scriptDirectory}/sync_config.json"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Mix files",
            "type": "shell",
            "command": "repomix",
            "args": [
                "--include",
                "\"assets/**,config/**,layout/**,locales/**,sections/**,snippets/**,templates/**\""
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}