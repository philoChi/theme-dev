{
  "name": "hyspex-theme",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "theme:start": "./scripts/manager-theme-dev.sh start",
    "theme:stop": "./scripts/manager-theme-dev.sh stop",
    "theme:restart": "./scripts/manager-theme-dev.sh restart",
    "theme:list": "./scripts/manager-theme-dev.sh list",
    "theme:status": "./scripts/manager-theme-dev.sh status",
    "theme:logs": "./scripts/manager-theme-dev.sh logs",
    "theme:cleanup": "./scripts/manager-theme-dev.sh cleanup",
    "theme:help": "./scripts/manager-theme-dev.sh help",
    "theme:pull": "cd theme-hyspex && shopify theme pull --only config/settings_data.json",
    "build": "webpack",
    "build:dev": "NODE_ENV=development webpack && sleep 0.5 && touch theme-hyspex/assets/global.css",
    "watch": "webpack --watch",
    "build:analyze": "ANALYZE_BUNDLE=true webpack --mode=production",
    "clean": "rm -rf theme-hyspex/assets/section-*.js theme-hyspex/assets/section-*.css theme-hyspex/assets/snippet-*.js theme-hyspex/assets/snippet-*.css theme-hyspex/assets/features-*.js theme-hyspex/assets/features-*.css theme-hyspex/assets/global.js theme-hyspex/assets/global.css",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test tests/e2e/*-wsl.spec.js --project=firefox",
    "test:e2e:headed": "echo 'Headed mode not supported in WSL. Use screenshots instead.'",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:wsl": "playwright test tests/e2e/*-wsl.spec.js --project=firefox",
    "test:collection": "playwright test tests/e2e/collection-page-complete-workflow.spec.js --project=firefox",
    "test:collection:simple": "node tests/e2e/run-collection-tests.js",
    "test:verify-flicker": "node tests/e2e/verify-no-flickering.js",
    "test:all": "npm run test && npm run test:e2e",
    "test:workflow": "npm run test:collection:simple",
    "clean:captures": "node tests/e2e/verification/clean-captures.js",
    "git:info": "./scripts/git-repository-info.sh --format=json",
    "deploy:dev": "./scripts/deploy.sh development",
    "deploy:prod": "./scripts/deploy.sh production"
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/tests/e2e/"
    ],
    "testMatch": [
      "**/tests/unit/**/*.test.js",
      "**/tests/integration/**/*.test.js"
    ],
    "transform": {}
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@babel/core": "^7.27.7",
    "@babel/preset-env": "^7.27.2",
    "@playwright/test": "^1.54.1",
    "@shopify/cli": "^3.81.2",
    "@shopify/theme": "^3.58.2",
    "@testing-library/jest-dom": "^6.6.3",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^9.2.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "cypress": "^13.17.0",
    "glob": "^11.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^10.2.4",
    "sass": "^1.89.2",
    "sass-loader": "^16.0.5",
    "style-loader": "^4.0.0",
    "webpack": "^5.99.9",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-remove-empty-scripts": "^1.1.1"
  },
  "dependencies": {
    "axe-playwright": "^2.1.0",
    "cypress-axe": "^1.5.0"
  }
}
