{%- comment -%}
  Icon System CSS Variables
  Generates CSS custom properties with proper Shopify asset URLs
  Used by the global icon system for mask-based SVG icons
{%- endcomment -%}

<style>
:root {
  /* Navigation & UI Icons */
  --icon-close: url('{{ 'icon-close.svg' | asset_url }}');
  --icon-cart: url('{{ 'icon-cart.svg' | asset_url }}');
  --icon-search: url('{{ 'icon-search.svg' | asset_url }}');
  --icon-login: url('{{ 'icon-login.svg' | asset_url }}');
  --icon-hamburger: url('{{ 'icon-hamburger.svg' | asset_url }}');
  --icon-filter: url('{{ 'icon-filter.svg' | asset_url }}');
  --icon-dropdown-arrow: url('{{ 'icon-dropdown-arrow.svg' | asset_url }}');
  --icon-question: url('{{ 'icon-question.svg' | asset_url }}');
  --icon-feature-chips: url('{{ 'icon-feature-chips.svg' | asset_url }}');
  --icon-feature-chips-simple: url('{{ 'icon-feature-chips-simple.svg' | asset_url }}');
  --icon-feature-chips-organic: url('{{ 'icon-feature-chips-organic.svg' | asset_url }}');
  --icon-feature-chips-cozy: url('{{ 'icon-feature-chips-cozy.svg' | asset_url }}');

  /* Clothing Category Icons */
  --icon-t-shirt: url('{{ 'icon-t-shirt.svg' | asset_url }}');
  --icon-socks: url('{{ 'icon-socks.svg' | asset_url }}');
  --icon-sweatshirt: url('{{ 'icon-sweatshirt.svg' | asset_url }}');
  --icon-hoodie: url('{{ 'icon-hoodie.svg' | asset_url }}');

  /* Social Icons */
  --icon-social-newletter: url('{{ 'icon-social-newletter.svg' | asset_url }}');
  --icon-social-mailbox: url('{{ 'icon-social-mailbox.svg' | asset_url }}');
  --icon-social-instagram: url('{{ 'icon-social-instagram.svg' | asset_url }}');

  /* Arrow Navigation Icons */
  --icon-arrow-next-arrow: url('{{ 'icon-arrow-next-arrow.svg' | asset_url }}');
  --icon-arrow-next-chevron: url('{{ 'icon-arrow-next-chevron.svg' | asset_url }}');
  --icon-arrow-prev-arrow: url('{{ 'icon-arrow-prev-arrow.svg' | asset_url }}');
  --icon-arrow-prev-chevron: url('{{ 'icon-arrow-prev-chevron.svg' | asset_url }}');

  /* Brand & Logo Icons */
  --icon-logo: url('{{ 'icon-logo.svg' | asset_url }}');
  --icon-dhl: url('{{ 'icon-dhl.svg' | asset_url }}');

  /* Flags */
  --icon-flag-german: url('{{ 'icon-flag-german.svg' | asset_url }}');
}
</style>
