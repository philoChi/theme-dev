{%- liquid
  assign has_content = false
  if block.settings.title != blank or block.settings.description != blank or block.settings.cta_text_1 != blank or block.settings.cta_text_2 != blank or block.settings.cta_text_3 != blank
    assign has_content = true
  endif
-%}

{%- if has_content -%}
  <div class="image-slider__content" role="group" aria-label="Slide content">
    {%- if block.settings.title != blank or block.settings.description != blank -%}
      <header class="image-slider__header">
        {%- if block.settings.title != blank -%}
          <h2 class="image-slider__title">{{ block.settings.title | escape }}</h2>
        {%- endif -%}
        
        {%- if block.settings.description != blank -%}
          <p class="image-slider__description">{{ block.settings.description | escape }}</p>
        {%- endif -%}
      </header>
    {%- endif -%}

    {%- assign has_ctas = false -%}
    {%- for i in (1..3) -%}
      {%- liquid
        assign cta_text_key = 'cta_text_' | append: i
        if block.settings[cta_text_key] != blank
          assign has_ctas = true
          break
        endif
      -%}
    {%- endfor -%}

    {%- if has_ctas -%}
      <footer class="image-slider__actions">
        <div class="image-slider__ctas" role="group" aria-label="Call to action buttons">
          {%- for i in (1..3) -%}
            {%- liquid
              assign cta_text_key = 'cta_text_' | append: i
              assign cta_link_key = 'cta_link_' | append: i
            -%}
            {%- if block.settings[cta_text_key] != blank -%}
              {%- render 'snippet-feature-button', 
                  button_text: block.settings[cta_text_key], 
                  button_link: block.settings[cta_link_key], 
                  size: 'medium' -%}
            {%- endif -%}
          {%- endfor -%}
        </div>
      </footer>
    {%- endif -%}
  </div>
{%- endif -%}
