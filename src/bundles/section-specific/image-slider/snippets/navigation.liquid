{%- liquid
  assign slider_id = slider_id | default: 'image-slider-default'
  assign blocks_count = blocks_count | default: 1
-%}

<div class="image-slider__navigation-overlay">
  <div class="image-slider__navigation-inner">
    <div class="image-slider__separator" aria-hidden="true"></div>
    
    <nav class="image-slider__navigation" aria-label="Slider navigation">
      <div class="image-slider__arrows">
        {%- render 'snippet-feature-arrow-navigation',
          data_attributes: 'data-arrow="prev"',
          direction: 'prev',
          style_wrapper: 'glassmorphism',
          position: 'overlay'
        -%}
        
        {%- if blocks_count > 1 -%}
          <div class="image-slider__dots" aria-label="Slide indicators">
            {%- for i in (1..blocks_count) -%}
              <span 
                class="image-slider__dot" 
                aria-label="Slide {{ forloop.index }}"
                data-slide-index="{{ forloop.index0 }}"
              >
                <span class="visually-hidden">Slide {{ forloop.index }}</span>
              </span>
            {%- endfor -%}
          </div>
        {%- endif -%}
        
        {%- render 'snippet-feature-arrow-navigation',
          data_attributes: 'data-arrow="next"',
          direction: 'next',
          style_wrapper: 'glassmorphism',
          position: 'overlay'
        -%}
      </div>
    </nav>
  </div>
</div>