{% comment %}
  Login Page Template
  Handles customer login form with email-based authentication
{% endcomment %}

<div class="account-page">
  <div class="account-page__container">
    <header class="account-page__header">
      <h1 class="account-page__title">{{ 'customer.login.title' | t }}</h1>
      <p class="account-page__description">{{ 'customer.login.description' | t }}</p>
    </header>

    {% form 'customer_login', class: 'login-form' %}
      {% if form.errors %}
        <div class="login-form__errors" role="alert">
          {{ form.errors | default_errors }}
        </div>
      {% endif %}

      <div class="login-form__field">
        <label for="CustomerEmail" class="login-form__label">
          {{ 'customer.login.email' | t }}
        </label>
        <input
          type="email"
          name="customer[email]"
          id="CustomerEmail"
          class="login-form__input{% if form.errors contains 'email' %} login-form__input--error{% endif %}"
          autocomplete="email"
          autocorrect="off"
          autocapitalize="off"
          placeholder="{{ 'customer.login.email' | t }}"
          value="{{ form.email }}"
          required
        >
        {% if form.errors contains 'email' %}
          <span class="login-form__error">
            {{ form.errors.translated_fields.email | capitalize }}
            {{ form.errors.messages.email }}.
          </span>
        {% endif %}
      </div>

      <div class="login-form__field">
        <label for="CustomerPassword" class="login-form__label">
          {{ 'customer.login.password' | t }}
        </label>
        <input
          type="password"
          name="customer[password]"
          id="CustomerPassword"
          class="login-form__input{% if form.errors contains 'password' %} login-form__input--error{% endif %}"
          autocomplete="current-password"
          placeholder="{{ 'customer.login.password' | t }}"
          required
        >
        {% if form.errors contains 'password' %}
          <span class="login-form__error">
            {{ form.errors.translated_fields.password | capitalize }}
            {{ form.errors.messages.password }}.
          </span>
        {% endif %}
      </div>

      <button type="submit" class="login-form__submit">
        {{ 'customer.login.sign_in' | t }}
      </button>
    {% endform %}

    <div class="login-form__footer">
      <p>
        <a href="{{ routes.account_recover_url }}" class="login-form__forgot">
          {{ 'customer.login.forgot_password' | t }}
        </a>
      </p>
      <p>
        {{ 'customer.login.no_account' | t }}
        <a href="{{ routes.account_register_url }}" class="login-form__register">
          {{ 'customer.login.create_account' | t }}
        </a>
      </p>
    </div>
  </div>
</div>